<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-consumer"/>

    <dubbo:registry client="curator" address="zookeeper://127.0.0.1:2181"/>

    <dubbo:reference timeout="4000" retries="0" id="demoService" generic="true"
                     interface="com.zhuweiwei.dubbo.provider.server.DemoService">
        <dubbo:method name="sayHello" timeout="3000" retries="0"/>
    </dubbo:reference>

    <dubbo:consumer timeout="500" retries="1"/>
</beans>