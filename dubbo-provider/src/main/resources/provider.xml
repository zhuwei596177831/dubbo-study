<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
    <dubbo:application name="dubbo-provider"/>

<!--    <dubbo:registry client="curator" address="zookeeper://127.0.0.1:2181" file="${user.home}/output/dubbo.cache"/>-->
    <dubbo:registry client="curator" address="nacos://127.0.0.1:8848" file="${user.home}/output/dubbo.cache"/>

    <dubbo:protocol name="dubbo" port="-1"/>

    <dubbo:service interface="com.zhuweiwei.dubbo.provider.server.DemoService" ref="demoServiceImpl" timeout="3000">
        <dubbo:method name="sayHello" timeout="2000" retries="2"/>
    </dubbo:service>

    <dubbo:provider timeout="1000" retries="1"/>

    <bean id="demoServiceImpl" class="com.zhuweiwei.dubbo.provider.server.impl.DemoServiceImpl"/>
</beans>